@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Docs
@using Volo.Docs.Localization
@using Volo.Docs.Pages.Documents
@inject IHtmlLocalizer<DocsResource> L
@model IndexModel
@{
}
@section styles {
    <abp-style-bundle name="@typeof(IndexModel).FullName">
        <abp-style src="/Pages/Documents/Shared/Styles/vs.css" />
    </abp-style-bundle>
}

<!-- Header section with a border for testing -->
<header style="border: 1px solid red;">
    <nav>
        <!-- Add your header content here -->
        <h1>Raaghu</h1>
        <ul>
            <li><a href="#">Home</a></li>
            <li><a href="#">About</a></li>
            <li><a href="#">Contact</a></li>
        </ul>
    </nav>
</header>

<div class="p-5">
    @if (Model.Projects == null || !Model.Projects.Any())
    {
        <div class="alert alert-secondary text-center" role="alert">
            @L["NoProjectWarning"]
        </div>
    }
    else
    {
        <h1>@L["Projects"]</h1>
        <p>
            <ul style="list-style-type: upper-roman;">
                @foreach (var project in Model.Projects)
                {
                    <li>
                        <h3>
                            <a href="@(Model.DocumentsUrlPrefix + project.ShortName)">
                                @project.Name
                            </a>
                        </h3>
                    </li>
                }
            </ul>
        </p>
    }
</div>
